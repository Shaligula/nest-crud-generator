{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "./dist/src",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"]
  },
  "include": ["src/*/**.ts"],
  "exclude": ["node_modules"]
}
